<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= hidden_input f, :id %>
    <%= error_tag f, :name %>
    <%= submit "New Jam", class: "btn btn-primary" %>
  </div>
<% end %>
